@model IEnumerable<WypozyczalniaGier.Models.Game>

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wypożyczalnia Gier</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Dostępność Gier</h1>
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Tytuł</th>
                    <th>Dostępność</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model)
                {
                    <tr>
                        <td>@game.Title</td>
                        <td>@(game.IsAvailable ? "Dostępna" : "Niedostępna")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <footer class="text-center mt-5">
        <p>Kontakt: wypozyczalnia@gier.pl | Tel: 797 235 193</p>
    </footer>
</body>
</html>
